<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/social_background">
    
    <RelativeLayout
        android:id="@+id/layout_header_share"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_social_background" >

        <ImageButton
            android:id="@+id/button_back_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_button"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/takastagram_text"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/img_view_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header_share"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/social_top_img"
        android:contentDescription="@string/app_name"/>
    
    <ImageButton 
        android:id="@+id/button_share_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_view_top"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/share_button_facebook"
        android:contentDescription="@string/app_name"/>
    
    <ImageButton 
        android:id="@+id/button_share_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_share_facebook"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/share_twitter_button"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"/>

</RelativeLayout>
